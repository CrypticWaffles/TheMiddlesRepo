<div class="container">
    <h2>Now Playing: <%= video.title %></h2>
    <div class="container">
        <video width="100%" controls>
            <source src="<%= video.url %>" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="container">
        <button onclick="vote(true)" class="btn btn-success">Yes</button>
        <button onclick="vote(false)" class="btn btn-danger">No</button>
    </div>
    <br>
    <a href="/gp/video/list" class="btn btn-primary">Back</a>
</div>
<script>
    async function vote(choice) {
// Make a POST request to the server
  let response = await fetch('/gp/vote', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
      VideoID: 1, choice, zipId: 'Zip'
    })
  });

  // Handle the response
  if (response.ok) {
    console.log('Vote submitted successfully');
    window.location.href = '/gp/feedback';
  } else {
    console.error('Failed to submit vote');
    alert('Failed to submit vote');
  }
}
</script>
